<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_darkblue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BasketBuddy" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/color_grey</item>
        <item name="colorButtonNormal">@color/buddy_green</item>
    </style>

    <style name="buttonStyle">
        <item name="android:colorBackground">@color/color_white</item>
        <item name="colorButtonNormal">@color/buddy_green</item>
    </style>

</resources>
