<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color_bg"
    tools:context="com.example.fisli.basketbuddy.TripHistory">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/deleteTripsBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:listSelector="@color/buddy_green"
        android:id="@android:id/list"
        />

    <Button
        android:text="Clear Trip History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:background="@color/color_red"
        android:id="@+id/deleteTripsBtn"
        android:onClick="deleteTrips"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="170dp" />

</RelativeLayout>
